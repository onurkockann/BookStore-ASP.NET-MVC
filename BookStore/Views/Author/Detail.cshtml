@{
    ViewBag.Title = "Yazar detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BookStore.Models
@model author

<h2>@Model.aName isimli yazarın detay sayfası</h2>
<hr />
<br />
<!--Section: Block Content-->
<section class="mb-5">

    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">

            <div id="mdb-lightbox-ui"></div>

            <div class="mdb-lightbox">

                <div class="row product-gallery mx-1">
                    <div class="col-12 mb-0">
                        <img src="@Model.aImage" style="width:100%">
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-6">

            <h5>@Model.aName</h5>
            <br />
            <p class="pt-1">
                @Model.aDescription
            </p>
            <div class="table-responsive">
                <table class="table table-sm table-borderless mb-0">
                    <tbody>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Wikipedia sayfasını <a href="@Model.aLink" target="_blank">görüntüle</a></strong></th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr>
        </div>
    </div>

</section>
<!--Section: Block Content-->