<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Book Store</title>
    @RenderSection("head", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Book Store - Admin", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Yazarlar", "Yazarlar", "Admin", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Kitaplar", "Kitaplar", "Admin", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Kategoriler", "Kategoriler", "Admin", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Yayinevleri", "Yayinevleri", "Admin", new { @class = "nav-link" })</li>
                </ul>
                @if (@HttpContext.Current.User.Identity.Name != "")
                {
                    <!-- Default dropstart button -->
                    <div class="btn-group dropstart">
                        <a class="btn btn-secondary dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/User/Profil">Profilim</a></li>
                            <li><a class="dropdown-item" href="/User/Logout">Çıkış</a></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @if (ViewBag.DoneMsg != null)
        {
            <div class="alert alert-success alert-dismissible">
                <h5><i class="icon fas fa-check"></i> Başarılı!</h5>
                @ViewBag.DoneMsg
            </div>
        }
        @if (ViewBag.FailMsg != null)
        {
            <br />
            <div class="alert alert-danger alert-dismissible">
                <h5><i class="icon fas fa-exclamation-triangle"></i> Hata!</h5>
                @ViewBag.FailMsg
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book Store</p>
        </footer>
    </div>
    
    @RenderSection("body", false)
    <script src="https://kit.fontawesome.com/91a465bebf.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("scripts", false)
</body>
</html>
