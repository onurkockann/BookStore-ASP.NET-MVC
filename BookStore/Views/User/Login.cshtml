@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BookStore.Models.user

<section class="content">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Giriş Yap</h3>
            </div>
            <div class="card-body login-card-body">
                <p class="login-box-msg">Oturumunuzu başlatmak için lütfen giriş yapın</p>
                <form action="/User/Login" method="post" role="form" onsubmit="subFr()">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="E-mail" required="" name="email" maxlength="25">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Şifre" required="" name="password" minlength="4" maxlength="25">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block" id="buttons">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <p class="mb-0">
                    Kullanıcı kaydın yokmu?<a href="/User/Register/" class="text-center">Kayıt ol</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</section>
<script>
    function subFr() {
        document.getElementById("buttons").disabled = true;
    }
</script>
