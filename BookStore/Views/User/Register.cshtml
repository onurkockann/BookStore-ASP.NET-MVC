@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BookStore.Models
@model user
<section class="content">

    <div class="login-box">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kayıt Ol</h3>
            </div>
            <div class="card-body login-card-body">
                <form action="/User/Register" method="post" role="form" onsubmit="subFr()">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mail</label>
                                <input value="" class="form-control" type="email" name="email" placeholder="E Mail" maxlength="25" required="" />
                            </div>
                            <div class="form-group">
                                <label>Şifre</label>
                                <input value="" class="form-control" type="password" name="password" placeholder="Şifre" minlength="4" maxlength="25" required="" />
                            </div>
                            <div class="form-group">
                                <label>Şifre Tekrar</label>
                                <input value="" class="form-control" type="password" name="pwt" placeholder="Şifre" minlength="4" maxlength="25" required="" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="checkbox" id="idkvkk" name="KVKK" value="ok" />
                                <label for="idkvkk">Şartları, politikaları ve kullanım koşullarını okudum kabul ediyorum.</label><br />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ad</label>
                                <input value="" class="form-control" type="text" name="firstname" placeholder="Ad" maxlength="20" required="" />
                            </div>
                            <div class="form-group">
                                <label>Soyad</label>
                                <input value="" class="form-control" type="text" name="lastname" placeholder="Soyad" maxlength="20" required="" />
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                <input value="" class="form-control" type="text" name="phone" placeholder="Telefon" maxlength="13" required="" />
                            </div>
                            <div class="form-group">
                                <label>Doğum Tarihi</label>
                                <input value="" class="form-control" type="date" name="birthday" maxlength="100" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <div align="center">
                        <button type="submit" class="btn btn-success">Kayıt Ol!</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.card -->
    </div>
</section>

<script>
    function subFr() {
        document.getElementById("buttons").disabled = true;
    }

    // BS-Stepper Init
    document.addEventListener('DOMContentLoaded', function () {
        window.stepper = new Stepper(document.querySelector('.bs-stepper'))
    })
</script>